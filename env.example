# Environment variables declared in this file are available at build time and runtime.
# Next.js will load environment variables from .env into process.env

# IMPORTANT: Use .env file (NOT .env.local) for this application

# ============================================
# DATABASE (PostgreSQL - Neon)
# ============================================
# Production (Neon PostgreSQL):
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# Local development (SQLite - deprecated):
# DATABASE_URL="file:./dev.db"

# ============================================
# NEXT.AUTH (Authentication)
# ============================================
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-here-generate-with-openssl"
NEXTAUTH_URL="http://localhost:3000"

# ============================================
# GOOGLE OAUTH (Optional)
# ============================================
# Get these from Google Cloud Console
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ============================================
# VERCEL BLOB (Optional - for image storage)
# ============================================
# BLOB_READ_WRITE_TOKEN="vercel_blob_rw_..."
